<aura:component controller="CopadoContactController">
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <aura:attribute name="account" type="Account" default="{'Name':'Default Name'}"/>
    <lightning:card title="{!v.account.Name}" iconName="standard:scan_card" class="slds-theme_success">
        <aura:set attribute="footer">
            <p>Website: {!v.account.Website}</p>
        </aura:set>
         <p class="slds-text-heading_medium slds-p-horizontal_small">
            Description:
            <p class="slds-text-heading_small slds-p-horizontal_small">
            	{!v.account.Description}
             </p>
        </p>
        <p class="slds-text-heading_medium slds-p-horizontal_small">
            Billing Address: 
            <p class="slds-text-heading_small slds-p-horizontal_small">
                <lightning:formattedAddress 
                                            street="{!v.account.BillingStreet}"
                                            city="{!v.account.BillingCity}"
                                            country="{!v.account.BillingCountry}"
                                            province="{!v.account.BillingState}"
                                            />
            </p>
        </p>
        <p class="slds-text-heading_medium slds-p-horizontal_small">
            Shipping Address: 
            <p class="slds-text-heading_small slds-p-horizontal_small">
	            <lightning:formattedAddress 
                             					street="{!v.account.ShippingStreet}"
                                                city="{!v.account.ShippingCity}"
                                                country="{!v.account.ShippingCountry}"
                                                province="{!v.account.ShippingState}"
                                                />
            </p>
        </p>
    </lightning:card>
</aura:component>